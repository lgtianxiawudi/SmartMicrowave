<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="1px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#94F2FF"
                android:startColor="#94F2FF" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="7dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#038BFF"
                android:centerColor="#038BFF"
                android:startColor="#038BFF" />
            

            <corners android:radius="7dp" />
        </shape>
    </item>

</layer-list>